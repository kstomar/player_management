<div class="container">
  <div class="row login-page">
    <div class="col-md-6 col-sm-6 form-group">
      <h1 class="display-3"><b>Player Management</b></h1>
    </div>
    <div class= "col-md-6 col-sm-6 form-group">
      <div class="container login-shadow">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <h2 class="text-left"><b>Sign Up</b></h2>
        </div>
        <hr>
        <div class="form-row">
          <div class="form-group">
            <%= f.text_field :name,autofocus: true, class: "form-control mb-3",placeholder: "Name" %>
          </div> 
        </div>
        <div class="form-row">
          <div class="form-group">
            <%= f.email_field :email,class: "form-control mb-3",placeholder: "Email"%>
          </div>
        </div>
        <div class="form-group">
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password,class: "form-control mb-3",placeholder: "New Password" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation,class: "form-control mb-3",placeholder: "Confirm Password"%>
        </div>
        <label class="mb-2"><b>Signup as</b></label>
        
        <div class="row container mb-3">
          <div class="col-md-6 col-sm-6 form-group">
            <%= f.radio_button(:type, "Organisation", checked: true) %>
            <%= f.label(:type, "Organisation") %>
          </div>
          <div class="col-md-6 col-sm-6 form-group">            
            <%= f.radio_button(:type, "Player") %>
            <%= f.label(:type, "Player") %>
          </div>            
        </div>   
        <div class="actions">
          <%= f.submit "Sign up",style: "height:40px; width:200px",class:"btn btn-success bg-blue text-white" %>
        </div>
        <hr>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>