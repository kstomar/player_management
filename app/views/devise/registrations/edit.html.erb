<div class="container">
  <div class="form-group text-center mb-5">
    <h1 class="display-3 mt-5" ><b>Edit Profile</b></h1>
  </div>
  <div class="form-group">
    <div class="container login-shadow profile-box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-row">
          <div class="col-md-12 col-sm-12 form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name,class: "form-control mb-3",placeholder: "Name", autofocus: true %>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-12 col-sm-12 form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email,class: "form-control mb-3",placeholder: "Email" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-row">
          <div class="col-md-12 col-sm-12 form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, class: "form-control mb-3", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        </div>

        <div class="form-row">
          <div class="col-md-12 col-sm-12 form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: "form-control mb-3", autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-row">
          <div class="col-md-12 col-sm-12 form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, class: "form-control mb-3", autocomplete: "current-password" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-success mb-3" %>
        </div>
      <% end %>
      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),class:"btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
